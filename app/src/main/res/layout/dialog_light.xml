<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comtainerborderbakbak">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/allback_border_header"
        >
        <ImageView
            android:id="@+id/iv_close_light"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/quit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="可调灯"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="@color/colorDeepBlue"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <EditText
        android:id="@+id/control_perial"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="70dp"
        android:hint="发送控制亮度时间间隔(默认500毫秒)"
        android:textSize="30dp"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:id="@+id/light_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="亮度:0%"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="@color/colorDeepBlue"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#ffffff"
            />
        <SeekBar
            android:id="@+id/light_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:thumb="@drawable/light"
            android:progressDrawable="@drawable/seekbar"

            />
        <Button
            android:id="@+id/send_light_order"
            android:layout_width="200dp"
            android:visibility="invisible"
            android:layout_height="80dp"
            android:background="@drawable/blue_btn"
            android:textColor="@color/colorWhiteLittle"
            android:text="Zigbee发送"
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>