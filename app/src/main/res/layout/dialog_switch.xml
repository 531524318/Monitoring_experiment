<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comtainerborderbakbak">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/allback_border_header"
        >
        <ImageView
            android:id="@+id/iv_close_light"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/quit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="继电器"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="@color/colorDeepBlue"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Switch
            android:id="@+id/switchSwitch"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:track="@drawable/track"
            android:thumb="@drawable/green_thumb"
            />
    </LinearLayout>
</LinearLayout>