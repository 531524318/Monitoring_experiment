<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comtainerborderbakbak">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/allback_border_header"
        >
        <ImageView
            android:id="@+id/iv_close_temhum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/quit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="温湿度传感器"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowColor="@color/colorDeepBlue"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/line_char_tem"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/tem_char"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/temshowvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="温度值"
                    android:textSize="40sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/line_char_hum"
                    android:layout_width="match_parent"
                    android:background="@drawable/tem_char"
                    android:layout_margin="10dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/humshowvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="湿度值"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>